{% extends 'base.html.twig' %}

{% block title %}Parcs{% endblock %}

{% block body %}
    <h1>Parcs</h1>

    <div class="my-2">
        <a href="{{ path('app_park_new') }}" class="btn btn-success"> <i class="bi bi-plus"></i> Ajouter un parc</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>OpeningYear</th>
                <th>Nb. Coasters</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for park in parks %}
            <tr>
                <td>{{ park.name }}</td>
                <td>{{ park.country }}</td>
                <td>{{ park.openingYear }}</td>
                <td>{{ park.coasters|length }}</td>
                <td>
    
                    <a href="{{ path('app_park_edit', {'id': park.id}) }}" class="btn btn-secondary btn-sm">
                        <i class="bi bi-pencil"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
